# 1. make project folder
mkdir ~/ai_trading_bot
cd ~/ai_trading_bot

# 2. create a python virtual environment
python -m venv venv

# 3. activate it
# macOS / Linux:
source venv/bin/activate
# Windows (PowerShell):
# .\venv\Scripts\Activate.ps1
# Or Windows cmd:
# .\venv\Scripts\activate.bat

